#!/usr/bin/env bash
set -e
if [[ ! -d "/home/gabriel/code/ocaml/wallust-theme-previews" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/gabriel/code/ocaml/wallust-theme-previews")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/gabriel/code/ocaml/wallust-theme-previews" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/gabriel/code/ocaml/wallust-theme-previews/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/gabriel/code/ocaml/wallust-theme-previews/.envrc" "/home/gabriel/code/ocaml/wallust-theme-previews/.direnv"/*.rc
